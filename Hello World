def main():
    # Prompt the user for their name
    name = input("Please enter your name: ")
    
    # Print the greeting
    print(f"Hello {name}")
    
    # Print a positive affirmation
    print("Today is going to be a great day!")
    
    # Prompt the user for their age
    age = input("Please enter your age: ")
    
    # Convert age to an integer and calculate the age in 2 years
    age_in_2_years = int(age) + 2
    
    # Print the future age
    print(f"In 2 years, you will be {age_in_2_years} years old")

# Call the main function
if __name__ == "__main__":
    main()
